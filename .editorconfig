# vim: ft=editorconfig

root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.{js,json,yml}]
indent_style = space
indent_size = 2

[*.{c,h,cpp,hpp}]
indent_style = tab
indent_size = 8

[Makefile]
indent_style = tab
indent_size = 8
